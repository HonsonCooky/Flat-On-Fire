rules_version = '2';
service firebase.storage {
    match /b/{bucket}/o {
        match /users/{uid}/{path=**} {
            allow read: if request.auth != null;
            allow write: if request.auth.uid == uid;
        }
        
        
        match /groups/{gid}/{path=**} {
//          Without cloud functions, this is made much harder. App check etc should ensure this is secure enough
            allow read, write: if request.auth != null;
        }
    }
}
